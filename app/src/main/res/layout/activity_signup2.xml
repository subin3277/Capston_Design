<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup2Activity"
    android:background="#FFD9EC">

    <TextView
        android:id="@+id/sinup2_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="회원 가입"
        android:textColor="#000000"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp" />

    <TextView
        android:id="@+id/signup2_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/sinup2_title"
        app:layout_constraintRight_toRightOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="@id/guideline"/>

    <EditText
        android:id="@+id/signup2_et_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/signup2_tv_name"
        app:layout_constraintRight_toRightOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        android:background="#ffffff"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/signup2_tv_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="나이"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/signup2_et_name"
        app:layout_constraintRight_toRightOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="@id/guideline"/>

    <EditText
        android:id="@+id/signup2_et_age"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/signup2_tv_age"
        app:layout_constraintRight_toRightOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        android:background="#ffffff"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/signup2_tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="출산 예정일"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/signup2_et_age"
        app:layout_constraintRight_toRightOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="@id/guideline"/>

    <TextView
        android:id="@+id/signup2_et_date"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/signup2_tv_date"
        app:layout_constraintRight_toRightOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/signup2_tv_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="몸무게"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/signup2_et_date"
        app:layout_constraintRight_toRightOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="@id/guideline"/>

    <EditText
        android:id="@+id/signup2_et_weight"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/signup2_tv_weight"
        app:layout_constraintRight_toRightOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        android:background="#ffffff"
        android:textColor="#000000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kg"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="@id/signup2_et_weight"
        app:layout_constraintTop_toTopOf="@id/signup2_et_weight"
        app:layout_constraintBottom_toBottomOf="@id/signup2_et_weight"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/signup2_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/signup2_et_weight"
        app:layout_constraintRight_toRightOf="@id/guideline2"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/signup2_backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이전"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/signup2_et_weight"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>