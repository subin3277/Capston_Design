<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_gravity="start"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFF0E8">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#FEDBD0">

            <TextView
                android:id="@+id/main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MOM STRONG"
                android:textSize="30sp"
                android:textColor="#000000"
                android:paddingTop="20dp"
                android:layout_gravity="center"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘도 건강하세요!"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:background="#ffffff"/>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:stretchColumns="0,2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:id="@+id/main_menu_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/ic_baseline_assessment_24"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#ffffff"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="산모 정보"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:layout_marginBottom="10dp"
                    />

                <LinearLayout
                    android:id="@+id/main_menu_diet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/ic_baseline_restaurant_24"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#ffffff"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="식단 추천"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000000"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

            <TableRow
                >
                <LinearLayout
                    android:id="@+id/main_menu_yoga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/ic_baseline_sports_handball_24"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#ffffff"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="요가"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />
                <LinearLayout
                    android:id="@+id/main_menu_hos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/ic_baseline_local_hospital_24"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#ffffff"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="병원"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000000"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

            <TableRow
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="설정"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"/>

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"/>

            </TableRow>


        </TableLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/main_nav_view"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity ="start"
        app:headerLayout="@layout/navi_header"
        app:menu="@menu/menu_drawer"
        />

</androidx.drawerlayout.widget.DrawerLayout>
