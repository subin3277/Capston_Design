<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HospFragment">

    <TextView
        android:id="@+id/hosp_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="병원 정보"
        android:textSize="30sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <CalendarView
        android:id="@+id/hosp_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hosp_title"
        android:background="#FFEBFE"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/hosp_tv_calendar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="병원 세부 일정"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/hosp_calview"
        app:layout_constraintTop_toBottomOf="@+id/hosp_calendar"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hosp_calview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hosp_tv_calendar"
        android:layout_margin="10dp"
        android:background="@drawable/border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hosp_calview"

        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="병원 일정 추가하기"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="인근 병원 찾기"
            android:layout_weight="1"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>