<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dietinfo_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_gravity="start"
    tools:openDrawer="start"
    tools:context=".DietinfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/dietinfo_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainpink"
            >

            <TextView
                android:id="@+id/hosp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="식단 추천"
                android:textSize="30sp"
                android:textColor="@color/maintext"
                android:layout_gravity="center"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘의 추천은"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/dietinfo_rice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="짜잔~~~~"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="항목"
                    android:textSize="22sp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="항목"
                    android:textSize="22sp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="분류"
                    android:textSize="22sp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="분류"
                    android:textSize="22sp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1인분 기준량"
                    android:textSize="22sp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1인분 기준량"
                    android:textSize="22sp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="칼로리"
                    android:textSize="22sp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="칼로리"
                    android:textSize="22sp"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/dietinfo_soup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="짜잔~~~~"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/dietinfo_side1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="짜잔~~~~"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/dietinfo_side2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="짜잔~~~~"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/black"/>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/dietinfo_nav_view"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity ="start"
        app:headerLayout="@layout/navi_header"
        app:menu="@menu/menu_drawer"
        />

</androidx.drawerlayout.widget.DrawerLayout>
