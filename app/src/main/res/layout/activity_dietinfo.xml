            android:layout_height="wrap_content"
            android:text="오늘의 추천은"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"/>
